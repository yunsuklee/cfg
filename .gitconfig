[alias]
	alias = config --get-regexp alias
	co = checkout
	cb = checkout -b
	cop = "!f() { git checkout \"$1\" && git pull; }; f"
	sw = switch
	br = branch
	db = branch -d
	all = add .
	a = add
	ci = commit
	cm = commit -m
	ca = commit -am
	acp = "!f() { git add -A && git commit -m \"$1\" && git push; }; f"
	st = status
	s = status -s
	unstage = reset HEAD --
	staged = diff --cached
	last = log -1 HEAD
	ll = log --oneline --graph --decorate
	df = diff --word-diff
	dc = diff --cached
	pullr = pull --rebase
	pl = pull
	ps = push
	undo = reset --soft HEAD~1
	reset = rest --hard HEAD~1
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[core]
	eol = lf
	autocrlf = input
	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[include]
	path = ~/.gitconfig.local
